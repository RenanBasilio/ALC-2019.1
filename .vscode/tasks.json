{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "cmake",
            "args": [
                ".", "-Bbuild"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build (Debug)",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "cmake",
            "args": [
                "--build", "build"
            ],
            "dependsOn": "Make",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build (Release)",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "cmake",
            "args": [
                "--build" , "build",
                "--config", "Release"
            ],
            "dependsOn": "Make",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "./build/Debug/alc.exe"
        }
    ]
}